{
  "name": "bricks",
  "version": "1.0.0",
  "description": "A game built with Electron and TypeScript",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron ."
  },
  "keywords": ["electron", "game", "typescript"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "typescript": "^5.3.0"
  }
}
