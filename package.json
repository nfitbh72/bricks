{
  "name": "bricks",
  "version": "1.0.0",
  "description": "A game built with Electron and TypeScript",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer && npm run copy-assets",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "webpack",
    "copy-assets": "cp src/renderer/index.html dist/renderer/ && mkdir -p dist/renderer/assets/fonts && cp -r src/renderer/assets/fonts/* dist/renderer/assets/fonts/ && mkdir -p dist/renderer/assets/images && cp -r src/renderer/assets/images/* dist/renderer/assets/images/ && mkdir -p dist/renderer/assets/sounds && cp -r src/renderer/assets/sounds/* dist/renderer/assets/sounds/ && mkdir -p dist/renderer/i18n && cp -r src/renderer/i18n/*.json dist/renderer/i18n/",
    "watch": "npm run build:main -- --watch",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "electron",
    "game",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.bricks.game",
    "productName": "Bricks with UPGRADES",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game"
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "css-loader": "^7.1.2",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "sass": "^1.93.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "typed-scss-modules": "^8.1.1",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  }
}
